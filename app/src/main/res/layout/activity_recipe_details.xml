<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetails">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rec_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title of recipe"
                android:padding="10dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="Time to cook:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rec_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Time"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" minutes"
                    android:textColor="#000000" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="Servings:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rec_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="No. of servings"
                    android:text="" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="Skill level:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rec_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Beginner | Intermediate | Expert"
                    android:text="" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/calories_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:text="Calories:"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/rec_cals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="No. of calories"
                    android:text="" />
            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Ingredients:"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/rec_ingr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="List of items"
                android:padding="10dp"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="How to cook:"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/rec_cook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Directions"
                android:padding="10dp"
                android:text="" />

            <TextView
                android:id="@+id/uploader_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Recipe submitted by:"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/rec_uploader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Uploader"
                android:padding="10dp"
                android:text="" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rec_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:text="Share Recipe"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/rec_bkmk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:elevation="2dp"
                    android:padding="12dp"
                    android:text="Add to bookmarks"
                    android:textColor="#ffffff" />

            </android.support.v7.widget.LinearLayoutCompat>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>